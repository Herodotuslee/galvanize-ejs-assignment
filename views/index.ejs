<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <style>
    .card {
      border: 1px solid black;
      display: inline-block;
      padding: 10px;
      margin: 10px;
    }
  </style>
  </head>
  <body>
    <div class="container">


<!-- Show all class -->
      <% for(let i=0; i < result.length;i++){ %>
    <div class="card">

          <h3>Class Name : <%=result[i].classname %></h3>
          <h3>Teacher Name :<%=result[i].teacher %></h3>
          <a href="/class/<%=result[i].classname %>">Infomation </a>

          <form class='' action="/edit/<%= result[i].id %>" method="post">
              <input type="text" name="classname" placeholder="Course Name..." value='<%= result[i].classname %>'>
              <input type="text" name="teacher" placeholder="Instructor Name..." value="<%=result[i].teacher %>">
              <input type="submit" value="Update">
          </form>

<!-- DELETE a class -->
          <form action="/delete/<%= result[i].id  %>" method="get" style="display:inline-block">
           <input type="submit" name="" value="Delete">
         </form>
      </div>
      <% } %>
    </div>

    <form action="/" method="post">
      Class name:<br>
      <input type="text" name="classname" ><br>
      Teacher name:<br>
      <input type="text" name="teacher"><br><br>
      <input type="submit" value="Submit">
    </form>

  </body>
</html>
